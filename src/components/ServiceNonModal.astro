---
interface Props {
  title: string;
  cost: number;
  duration: number;
  anchorId: string;
}

const { title, cost, duration, anchorId } = Astro.props;
---

<article class="flex flex-col gap-2" id={anchorId}>
  <div
    class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-1 w-full p-2"
  >
    <h3 class="text-2xl text-left">{title}</h3>
    <p class="text-2xl">${cost}</p>
  </div>
  <div class="prose px-2">
    <slot />
  </div>
  <p class="text-sm text-light/50 px-2">{duration} min</p>
</article>
