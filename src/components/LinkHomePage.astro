---
interface Props {
  href: string;
  text: string;
}

const { href, text } = Astro.props;
---

<a href={href} class="flex justify-center items-center tracking-widest h-16 w-72 uppercase border border-light p-4 backdrop-blur hover:bg-light hover:text-night transition-all ease-in-out duration-300">
  {text}
</a>
