---
import { Image } from "astro:assets";
import BaseLayout from "@/layouts/BaseLayout.astro";
import { INFO } from "@/consts.ts";

import LinkHomePage from "@/components/LinkHomePage.astro";
import redReliefFacialImg from "@/assets/services/red-relief-facial.jpg";

const pageTitle = "Contact";
---

<BaseLayout pageTitle={pageTitle}>
  <section class="mx-auto">
    <div class="relative h-[480px] w-full">
      <Image
        src={redReliefFacialImg}
        alt="facials"
        class="h-full w-full object-cover"
      />
      <div class="absolute inset-0 h-full w-full bg-black opacity-60"></div>
      <div
        class="absolute inset-0 h-full w-full flex flex-col justify-center items-center"
      >
        <p class="font-serif text-center text-4xl p-4">
          Call or email to book today!
        </p>
        <div class="flex flex-col gap-4">
          <LinkHomePage href={INFO.PHONE_HREF} text={INFO.PHONE} />
          <LinkHomePage href={INFO.EMAIL_HREF} text={INFO.EMAIL} />
        </div>
      </div>
    </div>
    <div class="px-6">
      <p class="max-w-prose mx-auto mt-6">
        Please reach out with any questions about our services or concerns about
        your skin care!
      </p>
      <p class="max-w-prose mx-auto mt-6">
        Enzo Glow operates in the offices of Great Wave Acupuncture & Wellness
        in Westford, MA.
      </p>
      <div class="max-w-prose mx-auto mt-6">
        <p>Great Wave Acupuncture & Wellness</p>
        <p>Circle Health Westford Building</p>
        <p>198 Littleton Road</p>
        <p>Suite 202</p>
        <p>Westford, MA 01886</p>
      </div>
      <div>
        <iframe
          class="mx-auto mt-6 hidden sm:block"
          src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2938.57643725404!2d-71.43029917304688!3d42.564286!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x89e397d5b2084379%3A0xad18577602de8516!2sCircle%20Health%20Westford!5e0!3m2!1sen!2sus!4v1741862698920!5m2!1sen!2sus"
          width="600"
          height="450"
          style="border:0;"
          allowfullscreen=""
          loading="lazy"
          referrerpolicy="no-referrer-when-downgrade"
        >
        </iframe>
        <iframe
          class="mx-auto mt-6 block sm:hidden"
          src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2938.57643725404!2d-71.43029917304688!3d42.564286!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x89e397d5b2084379%3A0xad18577602de8516!2sCircle%20Health%20Westford!5e0!3m2!1sen!2sus!4v1741862698920!5m2!1sen!2sus"
          width="300"
          height="240"
          style="border:0;"
          allowfullscreen=""
          loading="lazy"
          referrerpolicy="no-referrer-when-downgrade"
        >
        </iframe>
      </div>
    </div>
  </section>
</BaseLayout>
